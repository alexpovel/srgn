    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'srgn'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=srgn",
                    "--package=srgn"
                ],
                "filter": {
                    "name": "srgn",
                    "kind": "bin"
                }
            },
            "args": [
                "--python",
                "comments",
                "--files",
                "**/strings.py"
            ],
            // "stdio": [
            //     ".vscode/debug-input.txt",
            //     null
            // ],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'srgn'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=srgn",
                    "--package=srgn"
                ],
                "filter": {
                    "name": "srgn",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
